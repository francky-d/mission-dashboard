# ===========================================
# Mission Dashboard - Production Environment
# ===========================================

# Application
APP_NAME="Mission Dashboard"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Logging
LOG_CHANNEL=stderr
LOG_LEVEL=warning

# Database (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=mission_dashboard
DB_USERNAME=mission_dashboard
DB_PASSWORD=your-strong-password-here

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=redis

# Mail (configure with your SMTP provider)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-username
MAIL_PASSWORD=your-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Reverb (WebSocket)
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=mission-dashboard
REVERB_APP_KEY=your-reverb-app-key
REVERB_APP_SECRET=your-reverb-app-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

# Vite Reverb (Frontend WebSocket connection)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST=your-domain.com
VITE_REVERB_PORT=8080
VITE_REVERB_SCHEME=https

# Docker ports (optional, for port forwarding)
FORWARD_DB_PORT=5432
FORWARD_REDIS_PORT=6379
